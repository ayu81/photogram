

<div class="posts-wrapper row">
  <% @posts.each do |post| %>
    <div class="post">
      <div class="post-head">
        <div class="name" style="color: solid black">
          <%= post.user.user_name %>
        </div>
      </div>
      <div class="image center-block">
        <%= link_to (image_tag post.image.url(:medium), class:'img-rounded'), post_path(post) %>
      </div>
      <p class="caption">
        <span style="color: #1c94e0; font-family: Verdana"><%= post.caption %></span>
        <br/>
        <span style="font-size: 12px"><%= time_ago_in_words(post.created_at) %> ago...</span>
      </p>
    </div>  
  <% end %>
</div>



